				{
					"name": "Upload Document to Context",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "document",
									"type": "file",
									"src": []
								},
								{
									"key": "contextId",
									"value": "{{context_id}}",
									"type": "text"
								},
								{
									"key": "uploadedBy",
									"value": "postman-user",
									"type": "text"
								},
								{
									"key": "tags",
									"value": "postman,test,upload",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "{{base_url}}/api/rag/upload",
							"host": ["{{base_url}}"],
							"path": ["api", "rag", "upload"]

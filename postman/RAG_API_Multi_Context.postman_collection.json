					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"message\": \"Explícame el contenido de los documentos\",\n  \"contextId\": \"default\",\n  \"topK\": 3,\n  \"includeContext\": true,\n  \"model\": \"gpt-4o\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/rag/chat",
							"host": ["{{base_url}}"],
							"path": ["api", "rag", "chat"]
						}
					},
					"response": []
				},
				{
					"name": "Search in Context",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"query\": \"información importante\",\n  \"contextId\": \"{{context_id}}\",\n  \"topK\": 5,\n  \"minSimilarity\": 0.1\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/rag/search",
							"host": ["{{base_url}}"],
							"path": ["api", "rag", "search"]
						}
					},
					"response": []
				},
				{

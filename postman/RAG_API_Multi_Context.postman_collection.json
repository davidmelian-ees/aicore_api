		{
			"name": "RAG Chat & Search",
			"item": [
				{
					"name": "Chat with Context",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"message\": \"¿Qué información contienen los documentos de este contexto?\",\n  \"contextId\": \"{{context_id}}\",\n  \"topK\": 5,\n  \"includeContext\": true,\n  \"model\": \"gpt-4o\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/rag/chat",
							"host": ["{{base_url}}"],
							"path": ["api", "rag", "chat"]
						}
					},
					"response": []
				},

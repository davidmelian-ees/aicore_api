						"body": {
							"mode": "raw",
							"raw": "{\n  \"query\": \"concepto específico\",\n  \"contextId\": \"{{context_id}}\",\n  \"documentId\": \"{{document_id}}\",\n  \"topK\": 3,\n  \"minSimilarity\": 0.2\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/rag/search",
							"host": ["{{base_url}}"],
							"path": ["api", "rag", "search"]
						}
					},
					"response": []
				}
			]
